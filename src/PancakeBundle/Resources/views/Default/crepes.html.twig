{% block images %}
<div class="row">
    <div class="col-4" >
        {% set params= { 'id': '1'} %}
        <a  href="{{path('details-crepe',params)}}">
            {% if pancake.findOneByName('Crêpe 1')==null %}
            <p>Aucun produit trouvé</p>
            {% else %}
            <img src="{{pancake.findOneByName('Crêpe 1').image}}"  alt="crêpe 1" title="Crêpe 1"/>
        </a>
            <p>{{pancake.findOneByName('Crêpe 1').name}}</p>
            <p>{{pancake.findOneByName('Crêpe 1').price}}</p>
            {% endif %}

    </div>
    <div class="col-4">
        <a href="{{path('crepes')}}">
            {% if pancake.findOneByName('Crêpe 2')==null %}
            <p>Aucun produit trouvé</p>
