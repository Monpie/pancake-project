{% extends 'PancakeBundle::layout.html.twig' %}

{# block head#}
{% block head %}
    <title> Crêpe à gogo !</title>
 {% endblock %} {# fin block head#}

{# block body #}
{% block body %}


    {# block header #}
    {% block header %}
        <img class="d-block " src="/bundles/images/logo.jpg"  alt="Logo">
    {% endblock %} {# fin block header #}


    {# block navbar #}
    {% block navbar %}
        <div class="entete">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" text-align="right">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">


                    <li class="nav-item active" >
                        <a class="nav-link" href="{{path('home')}}">Accueil <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Catalogue
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="{{path('crepes')}}">Crêpes</a>
                            <a class="dropdown-item" href="{{path('crepes')}}#pancake-selection">Pancakes</a> {#Modifier le href quand le fichier sera créé #}
                            {% if false %} {#Modifier lors de la connexion #}
                                <a class="dropdown-item" href="{{path('newCrepe')}}">Ajouter Crêpe</a>
                            {% endif %}
                        </div>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" href="{{path('contact')}}">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('panier')}}">Panier</a>
                    </li>

                {% if false %} {#Modifier lors de la connexion #}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Connexion
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="{{path('inscription')}}">Connexion</a>
                            <a class="dropdown-item" href="{{path('inscription')}}">Inscription</a>
                        </div>
                    </li>
                {% endif %}    

                </ul>
            </div>
        </nav>
        </div>
    {% endblock %} {# fin block navbar #}





    {# Barre déroulante des offres #}
    {% block carousel %}

    <div class="row">
        
        <div class="col-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">

                    {% for i in pancake %}
                        {% if i.promotion == true %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{i.id}}" class="active"></li>
                        {% endif %}

                    {% endfor %}

                    
                </ol>


                {# Barre déroulante d'images #}
                <div class="carousel-inner">
                    {% set cpt=1 %}
                    {% for i in pancake %}
                        {% if i.promotion == true %}
                            {% if cpt == 1 %} {# Cas du 1er  item qui doit être active #}
                                 <div class="carousel-item active">
                                    <a href="{{path('details-crepe',{ 'id': i.id})}}">
                                        <img class="d-block w-100" src="{{i.image}}" height="400"  alt=" slide {{cpt}}">
                                    </a>
                                </div>
                            {% else %}
                                <div class="carousel-item">
                                    <a href="{{path('details-crepe',{ 'id': i.id})}}">
                                        <img class="d-block w-100" src="{{i.image}}" height="400"   alt=" slide {{cpt}}">
                                    </a>
                                </div>

                            {% endif %}
                             
                            <div class="carousel-caption d-none d-md-block">
                                <p>{{i.name}}</p>
                            </div>
                        {% set cpt = cpt+1 %}
                        {% endif %}

                    {% endfor %}



                    


                </div>  {# Fin de div #}




                {# Bouton pour les slides (gauche) #}
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>

                {# Bouton pour les slides (droite) #}
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div style="background-color:powderblue;">
                    <center>
                        <h1> Offre du jour ! </h1>
                    </center>
            </div>  
         </div>

         <div class="col-3">
            <a href="{{path('crepes')}}"><img class="d-block " src="/bundles/images/crepe.png" height="200" alt="First slide">
                </a>
                <center>
                        <h1> Consulter Crepe ! </h1>
                </center>
        </div>

         <div class="col-3">
                <a href="{{path('pancakes')}}"><img class="d-block " src="/bundles/images/pancake.png" height="200" alt="First slide">
                </a>
                <center>
                        <h1> Consulter Pancake ! </h1>
                </center>
        </div>

    </div>

                

            
    {% endblock %} {# fin block carhouse1 #}

       

 {% endblock %} {# fin block body #}

