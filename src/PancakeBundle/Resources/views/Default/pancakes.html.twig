{% extends 'PancakeBundle::layout.html.twig' %}




{% block body %}


    {# block header #}
    {% block header %}
        <img class="d-block " src="/bundles/images/logo.jpg"  alt="Logo">
    {% endblock %} {# fin block header #}


    {# block navbar #}
    {% block navbar %}
       {{ parent() }}
    {% endblock %} {# fin block navbar #}


    {% block images %} {# block image #}
    <div class="row">

        {% for i in pancakes %}
            <div class="col-md-6">
             
            <a  href="{{path('details-crepe',{ 'id': i.id})}}">
                {% if i.isPancake == true %}
                <img src="{{i.image}}"  alt="pancake 1" title="Pancake" style="margin-left:13%;" />
            </a>
                <center>
                    <p>{{i.name}}</p>
                    <p>{{i.price}}</p>
                </center>
                {% endif %}
        </div>
        {% endfor %}



        
        

        {% endblock %} {# fin block image #}

{% endblock %}{# fin block body #}
